
<div class="container">
    {{ form_start(form , {'attr':{'novalidate':'novalidate'}}) }}
    <div class="form-group">
        {{ form_label(form.Type," Please Enter The Charity Type")  }}
        {{ form_widget(form.Type , {'attr':{'class':'form-control'} }) }}
        {% if form_errors(form.Type) is not empty %}
            <div class="alert alert-danger"> 
                {{ form_errors(form.Type) }}
            </div>
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.DateCharity," Please Enter The Date")  }}
        {{ form_widget(form.DateCharity , {'attr':{'class':'form-control'} }) }}
        {% if form_errors(form.DateCharity) is not empty %}
            <div class="alert alert-danger"> 
                {{ form_errors(form.DateCharity) }}
             </div>
        {% endif %}
    </div>
    
    <button class="btn btn-primary text-white py-3 px-4">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>