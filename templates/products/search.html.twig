{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product list</h1>

    {{ form_start(form) }}
        {{ form_row(form.productName) }}
        {{ form_row(form.search) }}
    {{ form_end(form) }}

    {% if products is empty %}
        <p>No products found.</p>
    {% else %}
        <ul>
            {% for product in products %}
                <li>{{ product.productname }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}





