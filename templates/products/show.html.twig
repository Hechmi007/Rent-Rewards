{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Productname</th>
                <td>{{ product.productname }}</td>
            </tr>
            <tr>
                <th>RentPrice</th>
                <td>{{ product.RentPrice }}</td>
            </tr>
            <tr>
                <th>Availabilitydate</th>
                <td>{{ product.Availabilitydate ? product.Availabilitydate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ProductType</th>
                <td>{{ product.ProductType }}</td>
            </tr>
            <tr>
                <th>ProductPicture</th>
                <td>{{ product.ProductPicture }}</td>
            </tr>
            <tr>
                <th>ProductAdress</th>
                <td>{{ product.ProductAdress }}</td>
            </tr>
            <tr>
                <th>StillAvailable</th>
                <td>{{ product.StillAvailable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_products_index') }}">back to list</a>

    <a href="{{ path('app_products_edit', {'id': product.id}) }}">edit</a>

    {{ include('products/_delete_form.html.twig') }}
{% endblock %}
