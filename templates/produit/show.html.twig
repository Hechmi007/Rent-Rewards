c{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ produit.nomproduit }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ produit.prixproduit }}</td>
            </tr>
            <tr>
