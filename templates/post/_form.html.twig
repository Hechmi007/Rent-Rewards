<div class='container text-center mt-8'>
    <div class='row'>
        <div class='d-flex flex-column'>
            <h1>Make a new post</h1>
            {{ form_start(form,{'atr':{'novalidate':'novalidate'}}) }}

            <div class="row mt-3"> 
           <div class="col-2 mt-3"> {{ form_label(form.title,"Post Title:",{'attr':{'class':'col-md-6'}}) }}</div>
            <div class="col-8">{{ form_widget(form.title) }}</div>
            </div>
            <div class="row mt-3">
            <div class="col-2 mt-3">{{ form_label(form.content,"Post Content:",{'attr':{'class':'col-md-6'}}) }}</div>
            <div class="col-8">{{ form_widget(form.content) }}</div>
            </div>
            





            <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
    </div>
    





