{% extends 'base2.html.twig' %}

{% block title %}Delete Wallet{% endblock %}

{% block body %}
    <h1>Are you sure you want to delete this wallet?</h1>

    <dl>
        <dt>Solde:</dt>
        <dd>{{ wallet.solde }}</dd>

        <dt>Points:</dt>
        <dd>{{ wallet.points }}</dd>

        <dt>Plan:</dt>
        <dd>{{ wallet.plan }}</dd>
    </dl>

    <form action="{{ path('admin_wallet_delete', {'id': wallet.id}) }}" method="POST">
        {{ csrf_token('delete' ~ wallet.id) }}
        <button type="submit">Delete</button>
    </form>

    <a href="{{ path('admin_wallet_show', {'id': wallet.id}) }}">Cancel</a>
{% endblock %}
